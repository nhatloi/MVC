
@model IEnumerable<SachOnline.Models.NHAXUATBAN>
@{
    ViewBag.Title = "Nhà Xuất Bản";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
    <h3>DANH SÁCH NHÀ XUẤT BẢN</h3>

    <a href="@Url.Action("ThemNXB", "NhaXuatBan")" class="btn bg-primary" style="margin-bottom: 1.5rem; color: white">
        <i class="glyphicon glyphicon-plus"></i> Tạo mới
    </a>

    <table width="100%" class="table table-bordered">
        <thead class="bg-primary">
            <tr>
                <th>Tên NXB</th>
                <th>Địa chỉ</th>
                <th>Điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenNXB</td>
                    <td>@item.DiaChi</td>
                    <td>@item.DienThoai</td>
                    <td>
                        <a href="@Url.Action("Edit", "NhaXuatBan", new { id = item.MaNXB })">Sửa</a>
                        <a href="/NhaXuatBan/Details?id=@item.MaNXB">Chi tiết</a>
                        <a href="@Url.Action("Delete", "NhaXuatBan", new { id = item.MaNXB })">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
